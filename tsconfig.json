{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "*": ["./node_modules/*"]
    },
    "types": ["node", "@wdio/sync", "jasmine", "@wdio/allure-reporter"]
  },
  "exclude": ["node_modules", "platforms"]
}
